// index list component
mixin indexlist(num, type)
    -
        var teminfo = ''
        if (type===1)
            teminfo = buyinfosingle
        else
            teminfo = buyinfosingle2

    ul
        - for (var i=0; i<num; i++)
            li.index-list-item
                .index-list-ctx
                    .bproinfo
                        a(href='#') #{teminfo.proname}
                    .buyinfo-bottom
                        .bbuyinfo-price
