//- 面包屑导航
mixin bread(items)
    div.breadcrumb&attributes(attributes)
        ul
            li
                font 您当前的位置：
            - for(var i=0; i<items.length; i++)
                if i < items.length - 1
                    li <a>#{items[i]}</a>
                        span &gt;
                else 
                    li <a class='cur'>#{items[i]}</a>

