//- 下拉
mixin select-group(items)
    div.select-group
        div.select
            span.select-val #{items[0]}
            i.g-arrow-down-icon
        ul.select-dropdown
            -for(var i=0;i<items.length;i++)
                if i == 0
                    li.active #{items[i]}
                else
                    li #{items[i]}

mixin sg-multi-choice(items)
    div.sg-multi-choice(data-max="2")
        div.choice
            span.choice-val #{items[0].tit}
            i.g-arrow-down-icon
        .choice-dropdown
            p 请选择一项
            ul
                -for(var i=0;i<items.length;i++)
                    li
                        if i==0
                            i.icon-check
                        else 
                            i.icon-uncheck
                        .choice-wrap
                            .choice-tit #{items[i].tit}
                            .choice-desc #{items[i].desc}
                        .choice-price
                            | ￥
                            em #{items[i].price}
            .choice-btn-warp
                span.sure 确认
                span.cancel 取消
mixin pagese(unit)
    div.pagination-wrp
        div.pageindex
            span 1
            |  -
            span 39
            |  / 共
            span 80
            | #{unit}
        .pagination
        .clear

