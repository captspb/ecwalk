mixin hotel-items(hotHotels)
    .hotel-items
        - for (var i=0; i< hotHotels.length; i++)
            a.hotel-item
                .hotel-item-pic
                     img.item-pic(src=hotHotels[i].item_pic)
                p #{hotHotels[i].description}
                .star
                    - for (var j=0; j< hotHotels[i].stars.length; j++)
                        if (hotHotels[i].stars[j] == 1)
                            em.icon-xingji
                        else
                            em.icon-kongxingji
                .price
                    em.money-type ￥
                    em.money-count #{hotHotels[i].price}
    .clear

