                            span.buyinfo-price-num #{teminfo.price}
                        .bstart-place #{teminfo.start}
                        .bstart-place #{teminfo.startPal}
                        .bstart-place(style='margin-right: 10px') #{teminfo.startDate}
                        .clear

// tab control
mixin tabctl(tabobj, color)
    .com-tab-ctl
        ul(class='tab-ctl-ul ' + color)
            - for (var i=0; i<tabobj.length; i++)
                - if (tabobj[i].iscur)
                    li(class='cur')
                        span.tab-ctl-text #{tabobj[i].text}
                        span.red-line
                - else
                    li
                        span.tab-ctl-text #{tabobj[i].text}
                        span.red-line

