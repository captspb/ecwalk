  script(type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=tmH4FzWYevQmsqCSbPA3u3A8")
  script(src='../../static/js/lib/jquery.pagination.js')
  script(src='../../static/js/lib/moment.js')
  script(src='../../static/js/lib/daterangepicker.js')
  script(src='../../static/js/baidumap/baidumap.js')
  script(src='../../static/js/hotel/hotelList.js')