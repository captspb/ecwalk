extends ../../component/common/layout
include ../../component/common/mixin
block append head
    title 酒店订单详情
block append style
    link(rel='stylesheet', href='../../static/css/daterangepicker.css')
    link(rel='stylesheet', href='../../static/css/menberCenter/hotelOrderDetail.css')

body
  block header
    include ../../component/common/header_center

  block content
    //- include ../../../model/menberCenter/orderManageData
    .menber-center
        .center-cont
            //- 左导航
            include ../../../view/component/menberCenter/left_orderDetailNav

            //- 右边内容
            ul.info-pannel
                li.info-tbl
                    h5.tbl-tit 产品信息
                    include ../../../view/component/menberCenter/productInfo-ht
                li.info-tbl
                    h5.tbl-tit 产品介绍
                    include ../../../view/component/menberCenter/productIntro
                li.info-tbl
                    h5.tbl-tit 价格明细
                    include ../../../view/component/menberCenter/priceDetail-ht
                li.info-tbl
                    h5.tbl-tit 联系人信息
                    include ../../../view/component/menberCenter/contactInfo
                li.info-tbl
                    h5.tbl-tit 房客信息
                    include ../../../view/component/menberCenter/renterInfo
                li.info-tbl(style='padding-bottom:23px')
                    h5.tbl-tit 备注信息
                        span.right-content 
                            | 共有 
                            span.red 5 
                            |  条备注信息
                    include ../../../view/component/menberCenter/noteInfo
                li.info-tbl
                    h5.tbl-tit 变更信息
                        span.right-content 
                            | 共查询到 
                            span.red 0 
                            |  条信息
                    include ../../../view/component/menberCenter/updateInfo
                li.info-tbl
                    h5.tbl-tit 跟单人信息
                    include ../../../view/component/menberCenter/followerInfo
                li.info-tbl
                    h5.tbl-tit 操作员信息
                        span.right-content （gzlds）演示账号GZLDS
                    include ../../../view/component/menberCenter/operateInfo
                    
block append script
    script(src='../../static/js/lib/jquery.pagination.js')
    script(src='../../static/js/lib/moment.js')
    script(src='../../static/js/lib/daterangepicker.js')
    script(src='../../static/js/menberCenter/hotelOrderDetail.js')
